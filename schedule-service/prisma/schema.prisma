generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  doctorCRM   String
  patientCPF String
  scheduledAt DateTime

  @@unique([doctorCRM, createdAt])
  @@unique([patientCPF, createdAt])
}

model DrugSchedule {
  id           Int      @id @default(autoincrement())
  drugId       String
  numberOfDays Int
  initialDate  DateTime @default(now())
  drugBreak    Int
  patientCPF   String 
}
