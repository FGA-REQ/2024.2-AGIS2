generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  doctorId  Int
  patientId Int

  @@unique([doctorId, createdAt])
  @@unique([patientId, createdAt])
}

model DrugSchedule {
  id           Int      @id @default(autoincrement())
  drugId       String // chave estrangeira de rem√©dio
  numberOfDays Int
  initialDate  DateTime @default(now())
  drugBreak    Int
  patientId    Int
}
