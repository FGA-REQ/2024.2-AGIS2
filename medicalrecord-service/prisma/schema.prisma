generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prescription {
  id         String   @id @default(cuid())
  patientCPF String
  doctorCRM  String
  content    String
  createdAt  DateTime @default(now())
}

model MedicalRecords {
  id         String   @id @default(cuid())
  age        Int
  patientCPF String
  doctorCRM  String
  weight     Float
  height     Float
  recordText String
  alergies   String
  createdAt  DateTime @default(now())
}
